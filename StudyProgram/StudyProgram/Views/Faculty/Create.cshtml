@model StudyProgram.Entity.Faculty

@{
    ViewData["Title"] = "Create";

    Layout = null;
}

<style>
    .form__createFaculty {
        background-color: #eee;
        width: 500px;
        height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin: 0 auto;

    }
    .form-group {
        display: flex;
        flex-direction: column;
        margin: .5rem;
    }

        .form-group > label {
            font-size: 1rem;
            margin-left: 1rem;
        }

        .form-group > .input {
            
            padding: 1rem;
            width: 100%;
            margin: 0 auto;
            border: none;
            outline: none;
            border-radius: 5px;
        }

        .form__btn {
            padding: 1rem;
            font-size: 1rem;
        }

        .back {
            margin-top: 1.5rem;
            border: 1px solid lightgray;
            padding: 1rem;
            display: inline-block;
            background-color: black;
        }

        .back > a {
            color: #fff;
            text-decoration: none;
            font-size: 1.5rem;
        }
</style>

<h1>Thêm Khoa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form__createFaculty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="FacultyId" class="control-label"></label>
                <input asp-for="FacultyId" class="form-control input" />
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="NameVN" class="control-label"></label>
                <input asp-for="NameVN" class="form-control input" />
                <span asp-validation-for="NameVN" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="NameEN" class="control-label"></label>
                <input asp-for="NameEN" class="form-control input" />
                <span asp-validation-for="NameEN" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary form__btn" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

