@model StudyProgram.Entity.Speciality

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<style>
    .form__createMajor {
        background-color: #eee;
        width: 600px;
        height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        margin: 0 auto;
    }

    .form-group-m {
        width: 90%;
        display: flex;
        flex-direction: column;
        margin: 1rem auto;
    }

    .back {
        margin-top: 1.5rem;
        border: 1px solid lightgray;
        padding: .5rem;
        display: inline-block;
        background-color: black;
    }

    .back > a {
        color: #fff;
        text-decoration: none;
        font-size: 1.5rem;
    }
</style>

<h1>Create</h1>

<h4>Speciality</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form__createMajor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group-m">
                <label asp-for="SpecialityId" class="control-label"></label>
                <input asp-for="SpecialityId" class="form-control" />
                <span asp-validation-for="SpecialityId" class="text-danger"></span>
            </div>
            <div class="form-group-m">
                <label asp-for="NameVN" class="control-label"></label>
                <input asp-for="NameVN" class="form-control" />
                <span asp-validation-for="NameVN" class="text-danger"></span>
            </div>
            <div class="form-group-m">
                <label asp-for="NameEN" class="control-label"></label>
                <input asp-for="NameEN" class="form-control" />
                <span asp-validation-for="NameEN" class="text-danger"></span>
            </div>
            <div class="form-group-m">
                <label asp-for="Desciption" class="control-label"></label>
                <input asp-for="Desciption" class="form-control" />
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group-m">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

