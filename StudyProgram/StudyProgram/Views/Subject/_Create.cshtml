<style>
    .modal-create {
        padding: 1rem;
        color: black;
    }
</style>

@model StudyProgram.Entity.Subject
<div class="modal-content modal-addorder__content modal-center modal-create" id="modify-order-content">
    <h3 class="montserrat-bold title-create-order m-0 text-left d-block pt-0">Thông tin môn  <span class="close cs-pointer text-right  montserrat-bold" data-dismiss="modal" style="color: #0888b1; line-height: 32px">  <i class="fa fa-times" aria-hidden="true"></i></span></h3>
    <form id="addSubject">
        <div class="form-group">
            <label for="SubjectId" class="control-label">SubjectId</label>
            <input name="model.SubjectId" value="@Model.SubjectId" class="form-control" />
        </div>
        <div class="form-group">
            <label for="NameVN" class="control-label"> NameVN</label>
            <input name="model.NameVN" value="@Model.NameVN" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Credit" class="control-label">Credit</label>
            <input name="model.Credit" value="@Model.Credit" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Description" class="control-label">Description</label>
            <input name="model.Description" value="@Model.Description" class="form-control" />
        </div>
        <div class="modal-footer add-user-footer border-0 d-block w-100 pull-left">
            <button type="button" class="btn coba-btn-close pull-left btn-danger" data-dismiss="modal">Đóng</button>
            <button type="button" class="btn coba-btn-save ml-5 pull-right btn-primary" onclick="submitForm()">Lưu môn học</button>
        </div>
    </form>
</div>
<script>
    function submitForm() {
        $.ajax({
            url: "/Subject/DoCreate",
            type: "post",
            data: $('form').serialize(),
            success: function (data) {
                debugger;
                if (data.isSuccess) {
                    alert("Lưu môn học");
                } else {
                    alert(data.message);
                }
            }, error: function () {

            }
        });
    }
</script>